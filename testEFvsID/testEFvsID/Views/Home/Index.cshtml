@section CustomNew{
    <hr />
    <div class="row list-custom-item">
        @foreach (var p in newcustom)
        {
            <div class="col-6 comboshow" style="position:static">
                <a class="list-custom-title" asp-controller="Home" asp-action="Detail" asp-route-postslug="@p.Slug">
                   <i class="fa fa-circle" style="font-size:6px; margin-right:3px;"></i>
                    <span>@p.Title</span>
                </a>
                <div class="sub-info">
                    <img src="@p.Thumbnail">
                    <p>

                        @p.Description
                    </p>
                </div>
            </div>
            
        }
        
    </div>
   
   
}
@section ListView{

    @using (Html.BeginForm("SearchResult","Home"))
    {
       
            <div class="input-group mb-3">
                <input type="text" class="form-control search-text" name="search" placeholder="Tìm kiếm">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="search-result" id="search-result">
               
            </div>
        
    }

    <h4 class="font-title">Hot new</h4>
    <hr style="border:solid 1px red" />
    @foreach (var post in newview)
    {
        <div class="media border-bottom mb-2 pb-2">
            <img src="@post.Thumbnail" class="mr-3 new-view-image">
            <div class="media-body">
                <p class="mt-0 new-title new-title-view">
                    <a class="" asp-controller="Home" asp-action="Detail" asp-route-postslug="@post.Slug">
                        @post.Title
                    </a>
                </p>
                <div class="new-footer">
                    @* <strong>@post.Author.UserName</strong>
                    <i>@post.DateUpdated</i> *@
                    <p>
                        <i class="fa fa-eye"></i>
                        @post.View
                    </p>
                    
                </div>

            </div>
        </div>
    }

}
